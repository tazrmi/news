<html>
    <head>
        <title>Clojure news</title>
        <link rel="stylesheet" type="text/css" href="/css.css">
    </head>
    <body>
        <div id="menu">
          <a class="a1" href="/">Index</a>
          <a class="a1" href="/news">News</a>
          <a class="a1" href="/sports">Sport news</a>
          <a class="a1" href="/showbizz">Showbizz news</a>
        </div>
       
        <div id="right">
 	      <h1 id="title">Top news</h1>
          <sections>
            {{#popular}}
              <a class="titles" href="/byId/{{id}}"><b>{{title}}</b></a>
              <h1>----------------------</h1>
            {{/popular}}
          </sections>
        </div>
	 
        <div id="container">
          <sections>
            {{#news}}
              <a class="titles" href="/byId/{{id}}"><b>{{title}}</b></a>
              <p>{{text}}<p>
            {{/news}}
          </sections>
        </div>
  
        <div id="related">
          <b><p>Related articles</p></b>
          <sections>
            {{#similar}}
               <p><a id="relatedtitles" href="/byId/{{id}}"><b>{{title}}</b></a></p>
            {{/similar}}
          </sections>
        </div>
    </body>
</html>